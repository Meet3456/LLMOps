{
    "family": "llmops-backend-task",
    "networkMode": "awsvpc",
    "executionRoleArn": "arn:aws:iam::974560757543:role/ecsTaskExecutionRole",
    "taskRoleArn": "arn:aws:iam::974560757543:role/ecsTaskExecutionRole",
    "requiresCompatibilities": [
        "FARGATE"
    ],
    "cpu": "1024",
    "memory": "8192",
    "containerDefinitions": [
        {
            "name": "llmops-redis-container",
            "image": "redis:7-alpine",
            "cpu": 128,
            "memory": 512,
            "essential": true,
            "command": [
                "redis-server",
                "--bind", "127.0.0.1",
                "--port", "6379"
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/llmops-backend-logs",
                    "awslogs-region": "eu-north-1",
                    "awslogs-stream-prefix": "redis"
                }
            }
        },
        {
            "name": "llmops-backend-container",
            "image": "974560757543.dkr.ecr.eu-north-1.amazonaws.com/llmops-backend:latest",
            "cpu": 512,
            "memory": 3072,
            "essential": true,
            "dependsOn": [
                {
                    "containerName": "llmops-redis-container",
                    "condition": "START"
                }
            ],
            "command": [
                "uv",
                "run",
                "uvicorn",
                "api.main:app",
                "--host",
                "127.0.0.1",
                "--port",
                "8000"
            ],
            "environment": [
                {
                    "name": "ENV",
                    "value": "production"
                },
                {
                    "name": "REDIS_HOST",
                    "value": "127.0.0.1"
                },
                {
                    "name": "REDIS_PORT",
                    "value": "6379"
                },
                {
                    "name": "LANGCHAIN_TRACING_V2",
                    "value": "true"
                },
                {
                    "name": "LANGCHAIN_ENDPOINT",
                    "value": "https://api.smith.langchain.com"
                },
                {
                    "name": "LANGCHAIN_PROJECT",
                    "value": "LLMOps"
                },
                {
                    "name": "MAX_GROQ_CONCURRENCY",
                    "value": "8"
                }
            ],
            "secrets": [
                {
                    "name": "GROQ_API_KEY_DEFAULT",
                    "valueFrom": "arn:aws:secretsmanager:eu-north-1:974560757543:secret:prod/llmops/apikeys-lQiqTK:GROQ_API_KEY_DEFAULT::"
                },
                {
                    "name": "GROQ_API_KEY_COMPOUND",
                    "valueFrom": "arn:aws:secretsmanager:eu-north-1:974560757543:secret:prod/llmops/apikeys-lQiqTK:GROQ_API_KEY_COMPOUND::"
                },
                {
                    "name": "GOOGLE_API_KEY",
                    "valueFrom": "arn:aws:secretsmanager:eu-north-1:974560757543:secret:prod/llmops/apikeys-lQiqTK:GOOGLE_API_KEY::"
                },
                {
                    "name": "LANGCHAIN_API_KEY",
                    "valueFrom": "arn:aws:secretsmanager:eu-north-1:974560757543:secret:prod/llmops/apikeys-lQiqTK:LANGCHAIN_API_KEY::"
                },
                {
                    "name": "DATABASE_URL",
                    "valueFrom": "arn:aws:secretsmanager:eu-north-1:974560757543:secret:prod/llmops/apikeys-lQiqTK:DATABASE_URL::"
                }
            ],
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/llmops-backend-logs",
                    "awslogs-region": "eu-north-1",
                    "awslogs-stream-prefix": "backend"
                }
            }
        },
        {
            "name": "llmops-frontend-container",
            "image": "974560757543.dkr.ecr.eu-north-1.amazonaws.com/llmops-backend:latest",
            "cpu": 256,
            "memory": 2048,
            "essential": true,
            "dependsOn": [
                {
                    "containerName": "llmops-backend-container",
                    "condition": "START"
                }
            ],
            "command": [
                "uv",
                "run",
                "streamlit",
                "run",
                "streamlit_app/app.py",
                "--server.port=8501",
                "--server.address=0.0.0.0",
                "--server.headless=true",
                "--server.runOnSave=false",
                "--browser.gatherUsageStats=false"
            ],
            "portMappings": [
                {
                    "containerPort": 8501,
                    "protocol": "tcp"
                }
            ],
            "environment": [
                {
                    "name": "API_URL",
                    "value": "http://127.0.0.1:8000"
                }
            ],
            "healthCheck": {
                "command": [
                    "CMD-SHELL",
                    "curl -f http://localhost:8501/_stcore/health || exit 1"
                ],
                "interval": 30,
                "timeout": 5,
                "retries": 3,
                "startPeriod": 60
            },
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/llmops-backend-logs",
                    "awslogs-region": "eu-north-1",
                    "awslogs-stream-prefix": "frontend"
                }
            }
        }
    ]
}